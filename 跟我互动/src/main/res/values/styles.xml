<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="bt_sure">
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/corner_white_15dp_blue</item>
        <item name="android:layout_marginLeft">@dimen/margin_size_12dp</item>
        <item name="android:layout_marginRight">@dimen/margin_size_12dp</item>
    </style>
    <style name="line_padding">
        <item name="android:background">@color/line2</item>
        <item name="android:layout_marginLeft">@dimen/margin_size_15dp</item>
        <item name="android:layout_marginRight">@dimen/margin_size_15dp</item>
    </style>
    <style name="nopaddingtop_15dp">
        <item name="android:paddingRight">@dimen/margin_size_15dp</item>
        <item name="android:paddingLeft">@dimen/margin_size_15dp</item>
        <item name="android:paddingBottom">@dimen/margin_size_15dp</item>
    </style>
</resources>

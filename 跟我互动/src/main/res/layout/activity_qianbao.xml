<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/bar_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_200dp"
        android:background="@color/deep_blue">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/margin_size_40dp"
                android:layout_height="@dimen/margin_size_40dp"
                android:src="@drawable/img01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_20dp"
                android:text="消费记录"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_15dp"
                android:text="￥15.33"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/margin_size_40dp"
                android:layout_height="@dimen/margin_size_40dp"
                android:src="@drawable/img01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_20dp"
                android:text="零钱"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_15dp"
                android:text="￥15.33"
                android:textColor="@color/line4"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/margin_size_40dp"
                android:layout_height="@dimen/margin_size_40dp"
                android:src="@drawable/img01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_20dp"
                android:text="银行卡"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_15dp"
                android:text="￥15.33"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/line2"
        android:orientation="vertical">

        <Button
            style="@style/bt_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:layout_marginTop="@dimen/margin_size_30dp"
            android:text="充 值" />

        <Button
            style="@style/bt_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:background="@drawable/corner_white_5dp_white_line4"
            android:text="提 现" />
    </LinearLayout>
</LinearLayout>
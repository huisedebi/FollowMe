<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_size_20dp"
    >
  <ImageView
      android:id="@+id/img_main"
      android:layout_width="@dimen/margin_size_50dp"
      android:layout_height="@dimen/margin_size_50dp"
      android:src="@drawable/img01"
      />
    <TextView
        android:id="@+id/tv_bank"
        android:layout_width="@dimen/margin_size_90dp"
        android:layout_height="wrap_content"
        android:text="建设银行储蓄卡"
        android:layout_toRightOf="@+id/img_main"
        android:layout_marginLeft="@dimen/margin_size_15dp"
        android:textSize="@dimen/font_size_20sp"
        />
    <TextView
        android:id="@+id/tv_star"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_size_50dp"
        android:layout_below="@+id/tv_bank"
        android:layout_toRightOf="@id/img_main"
        android:layout_marginLeft="@dimen/margin_size_15dp"
        android:text="* * * *    * * * *    * * * *    * * * *   "
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_size_50dp"
        android:text="3853"
        android:layout_toRightOf="@id/tv_star"
        android:layout_alignTop="@+id/tv_star"
        android:gravity="center"
        android:textSize="@dimen/font_size_30sp"
        />
</RelativeLayout>
    <TextView
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_8dp"
        android:background="@color/line2"
        />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_15dp">

            <ImageView
                android:id="@+id/img_person"
                android:layout_width="@dimen/margin_size_80dp"
                android:layout_height="@dimen/margin_size_80dp"
                android:src="@drawable/img01" />

            <TextView
                android:id="@+id/tv_faqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_15dp"
                android:layout_marginTop="@dimen/margin_size_10dp"
                android:layout_toRightOf="@+id/img_person"
                android:text="发起人：嚣张" />

            <TextView
                android:id="@+id/tv_mubiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_15dp"
                android:layout_marginTop="@dimen/margin_size_10dp"
                android:layout_toRightOf="@+id/tv_faqi"
                android:text="目标人：韩寒"
                android:textColor="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mubiao"
                android:layout_marginLeft="@dimen/margin_size_15dp"
                android:layout_marginTop="@dimen/margin_size_10dp"
                android:layout_toRightOf="@+id/img_person"
                android:text="明星群集资慈善活动"
                android:textSize="@dimen/font_size_20sp" />
        </RelativeLayout>

        <TextView
            style="@style/line_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_15dp"
            android:text="任务设计："
            android:textColor="@color/black" />

        <TextView
            style="@style/nopaddingtop_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_size_4dp"
            android:text="任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_15dp"
            android:text="任务设计："
            android:textColor="@color/black" />

        <TextView
            style="@style/nopaddingtop_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_size_4dp"
            android:text="任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计任务设计" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_8dp"
            android:background="@color/line2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="赞助要求" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1000元" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_1dp"
            android:background="@color/line2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="赞助要求" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300人" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_1dp"
            android:background="@color/line2" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_200dp"
            android:gravity="top"
            android:hint="其他要求"
            android:padding="@dimen/margin_size_15dp"
            android:textColorHint="@color/line4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_100dp"
            android:background="@color/line2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                style="@style/bt_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_40dp"
                android:text="提交" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

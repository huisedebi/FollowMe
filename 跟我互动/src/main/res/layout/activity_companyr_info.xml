<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/bar_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_size_15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="公司LOGO" />

        <ImageView
            android:layout_width="@dimen/margin_size_40dp"
            android:layout_height="@dimen/margin_size_40dp"
            android:src="@drawable/img01" />

        <ImageView
            android:layout_width="@dimen/margin_size_10dp"
            android:layout_height="@dimen/margin_size_10dp"
            android:layout_marginLeft="@dimen/margin_size_15dp"
            android:src="@drawable/right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="企业名称"
            android:textSize="@dimen/font_size_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[修改]"
            android:textColor="@color/the_red_color_normal" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_12dp"
        android:background="@color/line2" />

        <TextView
            android:padding="@dimen/margin_size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业资料"
            android:textSize="@dimen/font_size_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2" />


        <TextView
            android:padding="@dimen/margin_size_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料密码个人资料"
            android:textSize="@dimen/font_size_14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/line2"
        android:orientation="vertical">

        <Button
            style="@style/bt_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:layout_marginTop="@dimen/margin_size_30dp"
            android:text="提交" />

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/the_color_blue">

        <ImageView
            android:layout_width="@dimen/margin_size_20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_10dp"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:src="@drawable/search_while" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="@dimen/margin_size_161dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_size_10dp"
            android:background="@drawable/corner_white_5dp_blue_main">

            <TextView
                android:layout_width="@dimen/margin_size_80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="任务"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/margin_size_80dp"
                android:layout_height="match_parent"
                android:background="@drawable/corner_white_5dp_white_main"
                android:gravity="center"
                android:text="视频"
                android:textColor="@color/the_color_blue" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_size_10dp"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:src="@drawable/meg_while" />
    </LinearLayout>

    <com.Mystar.www.view.MyGallery
        android:id="@+id/mygallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_180dp"></com.Mystar.www.view.MyGallery>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/banner" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_20dp"
        android:background="@color/line2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_size_15dp"
        android:paddingTop="@dimen/margin_size_15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_img1"
                android:layout_width="@dimen/margin_size_18dp"
                android:layout_height="@dimen/margin_size_18dp"
                tools:src="@drawable/ic_bt_2" />

            <TextView
                android:id="@+id/menu_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_8dp"
                tools:text="未完成" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_img2"
                android:layout_width="@dimen/margin_size_18dp"
                android:layout_height="@dimen/margin_size_18dp"
                tools:src="@drawable/ic_bt_2" />

            <TextView
                android:id="@+id/menu_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_8dp"
                tools:text="未完成" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_img3"
                android:layout_width="@dimen/margin_size_18dp"
                android:layout_height="@dimen/margin_size_18dp"
                tools:src="@drawable/ic_bt_2" />

            <TextView
                android:id="@+id/menu_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_8dp"
                tools:text="未完成" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_img4"
                android:layout_width="@dimen/margin_size_18dp"
                android:layout_height="@dimen/margin_size_18dp"
                tools:src="@drawable/ic_bt_2" />

            <TextView
                android:id="@+id/menu_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_8dp"
                tools:text="未完成" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2" />
</LinearLayout>

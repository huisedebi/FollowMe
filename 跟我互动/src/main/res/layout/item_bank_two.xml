<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_size_15dp">

        <ImageView
            android:layout_width="@dimen/margin_size_20dp"
            android:layout_height="@dimen/margin_size_20dp"
            android:src="@drawable/jia" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_5dp"
            android:layout_weight="1"
            android:text="添加银行卡"
            android:textSize="@dimen/font_size_18sp" />

        <ImageView
            android:layout_width="@dimen/margin_size_15dp"
            android:layout_height="@dimen/margin_size_15dp"
            android:src="@drawable/right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_100dp"
        android:background="@color/line2">

        <Button
            style="@style/bt_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:layout_marginTop="@dimen/margin_size_30dp"
            android:text="确认" />
    </LinearLayout>
</LinearLayout>

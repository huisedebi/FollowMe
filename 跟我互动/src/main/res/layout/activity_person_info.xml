<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
<include layout="@layout/bar_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_size_15dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="头像"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="@dimen/margin_size_40dp"
            android:layout_height="@dimen/margin_size_40dp"
            android:src="@drawable/img01"
            />
        <ImageView
            android:layout_marginLeft="@dimen/margin_size_15dp"
            android:layout_width="@dimen/margin_size_10dp"
            android:layout_height="@dimen/margin_size_10dp"
            android:src="@drawable/right"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp" 
        android:background="@color/line2"
        />
  <LinearLayout
      android:layout_width="match_parent"
      android:padding="@dimen/margin_size_15dp"
      android:layout_height="wrap_content">
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="昵称/姓名"
          android:textSize="@dimen/font_size_14sp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="[修改]"
          android:textColor="@color/the_red_color_normal"
          />
  </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        /><LinearLayout
    android:layout_width="match_parent"
    android:padding="@dimen/margin_size_15dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="绑定手机 13465554878"
        android:textSize="@dimen/font_size_14sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[更换]"
        android:textColor="@color/the_red_color_normal"
        />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_size_15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="密码"
            android:textSize="@dimen/font_size_14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[修改]"
            android:textColor="@color/the_red_color_normal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/line2"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:layout_marginTop="@dimen/margin_size_30dp"
            style="@style/bt_sure"
            android:text="提交"
            />

    </LinearLayout>
</LinearLayout>

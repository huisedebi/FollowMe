<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <RelativeLayout
      android:padding="@dimen/margin_size_15dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/img_person"
          android:layout_width="@dimen/margin_size_60dp"
          android:layout_height="@dimen/margin_size_60dp"
          android:src="@drawable/img01"
          android:layout_marginLeft="@dimen/margin_size_15dp"
          />
      <TextView
          android:id="@+id/tv_type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="萧敬腾粉丝团A组"
          android:layout_toRightOf="@+id/img_person"
          android:layout_marginLeft="@dimen/margin_size_15dp"
          android:textColor="@color/black"
          />
      <TextView
          android:id="@+id/tv_fens"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="粉丝数：300"
          android:layout_toRightOf="@+id/img_person"
          android:layout_marginLeft="@dimen/margin_size_15dp"
          android:layout_below="@+id/tv_type"
          android:layout_marginTop="@dimen/margin_size_8dp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="粉丝数：300"
          android:layout_toRightOf="@+id/tv_fens"
          android:layout_marginLeft="@dimen/margin_size_15dp"
          android:layout_below="@+id/tv_type"
          android:layout_marginTop="@dimen/margin_size_8dp"
          />
  </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        />
</LinearLayout>

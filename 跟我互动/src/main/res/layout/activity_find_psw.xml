<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <include layout="@layout/bar_top"/>
    <EditText
        android:padding="@dimen/margin_size_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_phone"
        android:hint="请输入手机号"
        android:drawablePadding="@dimen/margin_size_15dp"
        android:textColorHint="@color/line4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:padding="@dimen/margin_size_15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/login_phone"
            android:hint="请输入手机号"
            android:drawablePadding="@dimen/margin_size_15dp"
            android:textColorHint="@color/line4"

            />
        <Button
            android:layout_width="@dimen/margin_size_120dp"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:text="点击发送"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/line2"
        android:layout_weight="1">
        <Button
            android:layout_marginTop="@dimen/margin_size_50dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            style="@style/bt_sure"
            android:text=" 下一步"
            />

    </LinearLayout>
</LinearLayout>

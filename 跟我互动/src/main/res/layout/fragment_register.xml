<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/bar_top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_10dp"
        android:background="@color/line2" />

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_40dp"
        android:layout_margin="@dimen/margin_size_10dp"
        android:background="@null"
        android:drawableLeft="@drawable/login_phone"
        android:drawablePadding="@dimen/margin_size_15dp"
        android:hint="请输入手机号码"
        android:textSize="@dimen/font_size_13sp"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_num"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_size_40dp"
            android:layout_margin="@dimen/margin_size_10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/login_phone"
            android:drawablePadding="@dimen/margin_size_15dp"
            android:hint="请输入验证码"
            android:textSize="@dimen/font_size_13sp"
            android:inputType="number" />

        <Button
            android:id="@+id/bt_send"
            android:layout_width="@dimen/margin_size_110dp"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:text="点击发送"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2" />

    <EditText
        android:id="@+id/ed_psw1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_40dp"
        android:layout_margin="@dimen/margin_size_10dp"
        android:background="@null"
        android:drawableLeft="@drawable/login_psw"
        android:drawablePadding="@dimen/margin_size_15dp"
        android:textSize="@dimen/font_size_13sp"
        android:hint="请输入密码" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2" />

    <EditText
        android:id="@+id/ed_psw2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_50dp"
        android:layout_margin="@dimen/margin_size_10dp"
        android:background="@null"
        android:drawableLeft="@drawable/login_psw"
        android:drawablePadding="@dimen/margin_size_15dp"
        android:textSize="@dimen/font_size_13sp"
        android:hint="确认密码" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/line2"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="@dimen/margin_size_20dp"
            android:id="@+id/bt_register"
            style="@style/bt_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:text="立即注册"
            android:textSize="@dimen/font_size_15sp" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size_15dp"
    android:background="@color/line2"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/img_person"
        android:layout_width="@dimen/margin_size_70dp"
        android:layout_height="@dimen/margin_size_70dp"
        android:src="@drawable/img01"
        android:layout_marginLeft="@dimen/margin_size_10dp"
        android:layout_marginTop="@dimen/margin_size_8dp"
        />
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_size_120dp"
       android:layout_weight="1"

        >
   <TextView
       android:id="@+id/text"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="发起人:"
       android:layout_margin="@dimen/margin_size_8dp"
       android:textSize="@dimen/font_size_11sp"
       />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嚣张"
        android:layout_toRightOf="@+id/text"
        android:layout_marginTop="@dimen/margin_size_8dp"
        android:textSize="@dimen/font_size_11sp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目标人:"
        android:textSize="@dimen/font_size_11sp"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginTop="@dimen/margin_size_8dp"
        android:layout_marginLeft="@dimen/margin_size_30dp"
        android:textColor="@color/the_color_blue"
        />
    <TextView
        android:id="@+id/tv_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="韩寒"
        android:textSize="@dimen/font_size_11sp"
        android:layout_toRightOf="@+id/text2"
        android:layout_marginTop="@dimen/margin_size_8dp"
        android:textColor="@color/the_color_blue"
        android:layout_marginLeft="@dimen/margin_size_8dp"
        />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明星群集资慈善活动"
            android:textSize="@dimen/font_size_20sp"
            android:layout_below="@+id/text"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_1dp"
            android:background="@color/line2"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/margin_size_8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="@dimen/margin_size_8dp"
            android:layout_marginLeft="@dimen/margin_size_8dp"
            >
            <ImageView
                android:layout_width="@dimen/margin_size_15dp"
                android:layout_height="@dimen/margin_size_15dp"
                android:src="@drawable/ic_bt_1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000人"
              android:layout_marginLeft="@dimen/margin_size_5dp"
                />
            <ImageView
                android:layout_width="@dimen/margin_size_15dp"
                android:layout_height="@dimen/margin_size_15dp"
                android:src="@drawable/ic_bt_1"
                android:layout_marginLeft="@dimen/margin_size_13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1000"
              android:layout_marginLeft="@dimen/margin_size_5dp"
                />
            <ImageView
                android:layout_width="@dimen/margin_size_15dp"
                android:layout_height="@dimen/margin_size_15dp"
                android:src="@drawable/ic_bt_1"
                android:layout_marginLeft="@dimen/margin_size_13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5天 "
              android:layout_marginLeft="@dimen/margin_size_5dp"
                />

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:layout_margin="@dimen/margin_size_8dp"
        android:layout_width="@dimen/margin_size_80dp"
        android:layout_height="@dimen/margin_size_80dp"
        android:text="支持1元"
        android:background="@drawable/corner_white_5dp_blue"
        android:textColor="@color/white"
        />
</LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size_1dp"
    android:layout_marginTop="@dimen/margin_size_10dp"
    android:background="@color/line2"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:layout_marginBottom="@dimen/margin_size_15dp"
            >
            <ImageView
                android:layout_width="@dimen/margin_size_18dp"
                android:layout_height="@dimen/margin_size_18dp"
                android:src="@drawable/ic_bt_1"
                android:layout_marginLeft="@dimen/margin_size_13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_marginLeft="@dimen/margin_size_5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/margin_size_1dp"
            android:layout_height="match_parent"
            android:background="@color/line2"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:layout_marginBottom="@dimen/margin_size_15dp"
            >
            <ImageView
                android:layout_width="@dimen/margin_size_18dp"
                android:layout_height="@dimen/margin_size_18dp"
                android:src="@drawable/ic_bt_1"
                android:layout_marginLeft="@dimen/margin_size_13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_marginLeft="@dimen/margin_size_5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/margin_size_1dp"
            android:layout_height="match_parent"
            android:background="@color/line2"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:layout_marginBottom="@dimen/margin_size_15dp"
            >
            <ImageView
                android:layout_width="@dimen/margin_size_18dp"
                android:layout_height="@dimen/margin_size_18dp"
                android:src="@drawable/ic_bt_1"
                android:layout_marginLeft="@dimen/margin_size_13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_marginLeft="@dimen/margin_size_5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/margin_size_1dp"
            android:layout_height="match_parent"
            android:background="@color/line2"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:layout_marginBottom="@dimen/margin_size_15dp"
            >
            <ImageView
                android:layout_width="@dimen/margin_size_18dp"
                android:layout_height="@dimen/margin_size_18dp"
                android:src="@drawable/ic_bt_1"
                android:layout_marginLeft="@dimen/margin_size_13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_marginLeft="@dimen/margin_size_5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/margin_size_1dp"
            android:layout_height="match_parent"
            android:background="@color/line2"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_8dp"
        android:background="@color/line2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_15dp">

        <ImageView
            android:id="@+id/img_person"
            android:layout_width="@dimen/margin_size_40dp"
            android:layout_height="@dimen/margin_size_40dp"
            android:src="@drawable/img01" />

        <TextView
            android:id="@+id/tv_faqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_10dp"
            android:layout_toRightOf="@+id/img_person"
            android:text="发起人：嚣张" />

        <TextView
            android:id="@+id/tv_mubiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_faqi"
            android:layout_marginLeft="@dimen/margin_size_10dp"
            android:layout_marginTop="@dimen/margin_size_8dp"
            android:layout_toRightOf="@+id/img_person"
            android:text="发起人：嚣张" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_person"
            android:layout_marginBottom="@dimen/margin_size_15dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:text="铭心群集机救援市局也我铭心群集机救援市局也我"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_18sp" />

        <TextView
            android:layout_width="@dimen/margin_size_80dp"
            android:layout_height="@dimen/margin_size_80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corner_blue_40dp_blue"
            android:gravity="center"
            android:padding="@dimen/margin_size_15dp"
            android:text="设置任务"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_8dp"
        android:background="@color/line2" />
</LinearLayout>

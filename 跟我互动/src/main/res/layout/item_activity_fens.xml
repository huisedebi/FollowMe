<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="@dimen/margin_size_15dp"
     android:gravity="right"
     android:text="2016.2.15"
     />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/img_person"
          android:layout_width="@dimen/margin_size_60dp"
          android:layout_height="@dimen/margin_size_60dp"
          android:src="@drawable/img01"
          android:layout_marginLeft="@dimen/margin_size_15dp"
          />
      <TextView
          android:id="@+id/tv_type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="小小粉丝"
          android:layout_toRightOf="@+id/img_person"
          android:layout_marginLeft="@dimen/margin_size_15dp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="小小粉丝小小粉丝小小粉丝"
          android:layout_toRightOf="@+id/img_person"
          android:layout_marginLeft="@dimen/margin_size_15dp"
          android:layout_below="@+id/tv_type"
          android:layout_marginTop="@dimen/margin_size_8dp"
          />
  </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="@dimen/margin_size_15dp"
        >
        <ImageView
            android:layout_width="@dimen/margin_size_15dp"
            android:layout_height="@dimen/margin_size_15dp"
            android:src="@drawable/img01"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:layout_marginLeft="@dimen/margin_size_5dp"
            />
        <ImageView
            android:layout_width="@dimen/margin_size_15dp"
            android:layout_height="@dimen/margin_size_15dp"
            android:src="@drawable/img01"
            android:layout_marginLeft="@dimen/margin_size_15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:layout_marginLeft="@dimen/margin_size_5dp"
            />
        <ImageView
            android:layout_width="@dimen/margin_size_15dp"
            android:layout_height="@dimen/margin_size_15dp"
            android:src="@drawable/img01"
            android:layout_marginLeft="@dimen/margin_size_15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:layout_marginLeft="@dimen/margin_size_5dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        />
</LinearLayout>
